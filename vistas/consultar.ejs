<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Upload an Image</title>
    <%- include("partials/head") -%>
</head>

<header>
    <%- include('../vistas/partials/header.ejs'); -%>
</header>

<body>
    <table>
        <thead>
            <th>ID</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Nombre proveedor</th>
        </thead>
        <tbody>
            <% for(var i = 0; i < listaProductos.length; i++){ %>
                
                <% 
                var proveedor = listaProductos[i].proveedor.toString();
                var proveedorSub = proveedor.substring(20, proveedor.length-3); 
                %>

                <tr>
                    <td> <%= listaProductos[i].id %></td>
                    <td> <%= listaProductos[i].nombreProducto %></td>
                    <td> <%= listaProductos[i].precio %></td>
                    <td> <%= listaProductos[i].cantidad %></td>
                    <td> <%= proveedorSub %></td>

                </tr>
            <%}%>
        </tbody>
    </table>

    
</body>
</html>