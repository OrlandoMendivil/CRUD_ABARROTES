<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Actualizar Proveedor</title>
    <%- include("partials/head") -%>
</head>

<body>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Actualizar Proveedor</h3>
                    </div>
                    <div class="card-body">
                        <form action="/actualizarProveedor/<%= proveedordb.id %>?_method=PUT" , method="POST" 
                            onsubmit="return confirm('¿Realmente desea actualizar este proveedor?');">
                            <div class="form-group">
                            <input type="text" id="idProveedor" name="id" placeholder="Inserte el ID" class="form-control" readonly/><br>
                            </div>
                            <div class="form-group">
                            <input type="text" id="nombreProveedor" name="nombreProveedor" placeholder="Inserte el nombre del proveedor" class="form-control" /><br>
                            </div>
                            <div class="form-group">
                            <input type="text" id="direcProveedor" name="direc" placeholder="Inserte la dirección" class="form-control"/><br>
                            </div>
                            <div class="form-group">
                            <input type="number" id="telefonoProveedor" name="telefono" placeholder="Inserte el Telefono" class="form-control"/><br>
                            </div>
                            <div class="form-group">
                            <input type="submit" class="btn btn-success btn-block" value="Actualizar proveedor" /><br>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javaScript">
        var idProveedor = "<%= proveedordb.id %>";
        var nombreProveedor = "<%= proveedordb.nombreProveedor %>";
        var direcProveedor = "<%= proveedordb.direc %>";
        var telefonoProveedor = "<%= proveedordb.telefono %>";

        document.getElementById("idProveedor").value = idProveedor;
        document.getElementById("nombreProveedor").value = nombreProveedor;
        document.getElementById("direcProveedor").value = direcProveedor;
        document.getElementById("telefonoProveedor").value = telefonoProveedor;
    </script>

</body>

</html>