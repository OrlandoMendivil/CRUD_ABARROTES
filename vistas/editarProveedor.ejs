<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Proveedor</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<header>
    <%- include('../vistas/partials/headerProveedores.ejs'); -%>
</header>

<body>
    <table class="table table-sm">
        <thead>
            <th>ID</th>
            <th>Nombre Proveedor</th>
            <th>Dirección</th>
            <th>Telefono</th>
            <th></th>
        </thead>
        <tbody id="tabla">
            <% for(var i=0; i < listaProve.length; i++){ %>
                <tr>
                    <td>
                        <%= listaProve[i].id %>
                    </td>
                    <td>
                        <%= listaProve[i].nombreProveedor %>
                    </td>
                    <td>
                        <%= listaProve[i].direc %>
                    </td>
                    <td>
                        <%= listaProve[i].telefono %>
                    </td>
                    <td>
                        <a href="/actualizarProveedor/<%= listaProve[i].id %>" class="btn btn-success">Actualizar</a>
                        <a href="#"  data-id="<%= listaProve[i].id %>" class="btn btn-danger deletePost" >Eliminar</a>
                    </td>
                </tr>
                <%}%>
        </tbody>
    </table>

</body>
</html>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"
integrity="sha256-o88AwQnZB+VDvE9tvIXrMQaPlFFSUTR+nldQm1LuPXQ=" crossorigin="anonymous"></script>
<script>
$(document).ready(function(){
    $('.deletePost').click(function(){
        var post = $(this).attr('data-id');
        var obj = $(this);

        $.ajax({
            url:"/eliminarProveedor",
            type:"POST",
            data:{id: post},
            success:function(response){
                if(response.success == true){
                    $(obj).parent().parent().remove();
                    onclick="return confirm('¿Esta seguro de que quiere eliminar este producto?')";
                }else{
                }
            }
        })
    })
})
</script>

